# ==================== OPENAI CONFIGURATION ====================
# Tu API Key de OpenAI (obtener en: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-tu-api-key-aqui

# Modelo a usar (gpt-3.5-turbo o gpt-4)
OPENAI_MODEL=gpt-3.5-turbo

# Temperatura del modelo (0.0 - 1.0, menor = más determinístico)
OPENAI_TEMPERATURE=0.3

# ==================== AGENT CONFIGURATION ====================
# Máximo de iteraciones del agente
MAX_AGENT_ITERATIONS=10

# Tipo de memoria de corto plazo (buffer o summary)
SHORT_TERM_MEMORY_TYPE=buffer

# ==================== DATABASE CONFIGURATION ====================
# Directorio para ChromaDB (memoria de largo plazo)
CHROMA_DB_DIRECTORY=./data/chroma_db

# Nombre de la colección en ChromaDB
CHROMA_COLLECTION_NAME=pasteleria_conversations

# ==================== LOGGING CONFIGURATION ====================
# Directorio para logs
LOG_DIRECTORY=./logs

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Activar logging en consola (True o False)
CONSOLE_OUTPUT=False

# ==================== APPLICATION CONFIGURATION ====================
# ID de cliente por defecto (opcional)
DEFAULT_CUSTOMER_ID=

# Número de documentos a recuperar en búsquedas
TOP_K_DOCUMENTS=3

# ==================== EMBEDDINGS CONFIGURATION ====================
# Modelo de embeddings para memoria de largo plazo
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
